{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "composite": true,
    "declarationMap": true,
    "moduleResolution": "node",
    "declaration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "strictPropertyInitialization": false,
    "sourceMap": true,
    "outDir": "lib",
    "experimentalDecorators": true,
    "rootDirs": ["src"],
    "skipLibCheck": true
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}
